<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is red color rectangle with green border. -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/chartreuse" />
            <corners
                android:radius="@dimen/small_padding"/>

            <size
                android:width="100dp"
                android:height="20dp" />
        </shape>
    </item>

    <item android:left="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <size
                android:width="50dp"
                android:height="20dp" />
        </shape>
    </item>
    <!-- The top layer is an image. -->
    <!--<item android:drawable="@drawable/img6" />-->
</layer-list>