<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@drawable/item_back"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/default_margin">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                style="@style/TaskTitle"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/name"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start_date"
                    style="@style/TaskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/very_small_padding"
                    android:textSize="14sp" />

                <TextView
                    style="@style/TaskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/very_small_padding"
                    android:textSize="12sp"
                    android:text="to"/>

                <TextView
                    android:id="@+id/completion_date"
                    style="@style/TaskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/very_small_padding"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/duration"
                style="@style/TaskTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hide_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container"
        android:visibility="gone">

        <View
            android:layout_marginTop="@dimen/small_padding"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_below="@+id/title_container"
            android:id="@+id/divider"/>

        <LinearLayout
            android:layout_marginTop="@dimen/small_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:id="@+id/work_done_container"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TaskTitle"
                    android:textSize="10sp"
                    android:text="@string/volume_of_works"/>

                <TextView
                    android:text="@string/volume_of_works"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TaskTitle"
                    android:textSize="10sp"
                    android:gravity="end"
                    android:id="@+id/vol_of_works"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TaskTitle"
                    android:textSize="10sp"
                    android:text="@string/volume_of_works_done"/>

                <TextView
                    android:text="@string/volume_of_works"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TaskTitle"
                    android:textSize="10sp"
                    android:gravity="end"
                    android:id="@+id/vol_of_works_done"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/small_padding"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_below="@+id/work_done_container"
            android:id="@+id/divider2"/>

        <RelativeLayout
            android:id="@+id/pro_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:padding="@dimen/small_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:text="@string/progress"
                android:textColor="@color/azure"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/rect_back"
                android:padding="@dimen/small_padding"
                android:textColor="@color/red"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="italic" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pro_txt"
            android:indeterminate="false"
            android:max="100"
            android:progress="20"
            android:progressDrawable="@drawable/progress_back" />

        <View
            android:layout_marginTop="@dimen/small_padding"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_below="@+id/progress_bar"
            android:id="@+id/divider3"/>
        <LinearLayout
            android:layout_marginTop="@dimen/medium_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/progress_bar"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="@dimen/task_icon_dim"
                android:layout_height="@dimen/task_icon_dim"
                app:srcCompat="@drawable/eye"
                android:tint="@color/white"
                android:id="@+id/view_project"
                android:clickable="true"
                android:background="@drawable/ripple"
                android:layout_marginEnd="@dimen/default_margin"/>

            <ImageView
                android:layout_width="@dimen/task_icon_dim"
                android:layout_height="@dimen/task_icon_dim"
                app:srcCompat="@drawable/delete"
                android:tint="@color/white"
                android:id="@+id/delete"
                android:clickable="true"
                android:background="@drawable/ripple"
                android:layout_marginEnd="@dimen/default_margin"/>

            <ImageView
                android:layout_width="@dimen/task_icon_dim"
                android:layout_height="@dimen/task_icon_dim"
                app:srcCompat="@drawable/edit"
                android:id="@+id/edit"
                android:tint="@color/white"
                android:clickable="true"
                android:background="@drawable/ripple"
                android:layout_marginEnd="@dimen/default_margin"/>


            <ImageView
                android:layout_width="@dimen/task_icon_dim"
                android:layout_height="@dimen/task_icon_dim"
                app:srcCompat="@drawable/add"
                android:id="@+id/fab_add"
                android:tint="@color/white"
                android:clickable="true"
                android:background="@drawable/ripple"
                android:layout_marginEnd="@dimen/default_margin"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
